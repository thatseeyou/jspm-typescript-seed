{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
		"lib": [
			"es2016",
			"dom"
		],

        // related to Angular2
        "experimentalDecorators": true, 
        "emitDecoratorMetadata": true,  

        // related to /// <reference types="..." />
        "typeRoots": [
            "../node_modules/@types",
            "../types"
        ],
        "types": ["node"],   

        // related to import MODULE
        "baseUrl": "..",
        "paths": {
			"rxjs" : ["jspm_packages/npm/rxjs@5.4.0"],
			"rxjs/*" : ["jspm_packages/npm/rxjs@5.4.0/*"],
			"core-js": ["jspm_packages/npm/core-js@2.4.1"],
			"core-js/*": ["jspm_packages/npm/core-js@2.4.1/*"],
			"zone.js": ["jspm_packages/npm/zone.js@0.8.10"],
			"zone.js/*": ["jspm_packages/npm/zone.js@0.8.10/*"],
			"zone.js/dist/zone": ["jspm_packages/npm/zone.js@0.8.10/dist/zone.js.d.ts"],
			"@angular/*": ["jspm_packages/npm/@angular/*@4.1.2"],
			"angular-in-memory-web-api": ["jspm_packages/npm/angular-in-memory-web-api@0.3.2"],
            "*": [
                "node_modules/@types/*",
                "types/*"   // custom declarations
            ]
        }
    }
}
